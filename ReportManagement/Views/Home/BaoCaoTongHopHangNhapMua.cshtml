
@{
    ViewBag.Title = "Báo cáo tổng hợp hàng nhập mua";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="card">
    <div class="card-body justify-content-center align-content-center h-auto overflow-hidden">
        <div class="mt-2 mb-2"><a href="@Url.Action("TongHopHangNhapMua","Home")" class="btn btn-outline-dark">Quay lại</a></div>
        <section class="h-auto overflow-hidden" aria-labelledby="gettingStartedTitle">
            @{ string name = ViewBag.ReportName;
                string tungay = ViewBag.FromDate;
                string denngay = ViewBag.ToDate;
                string taikhoan_id = ViewBag.TaikhoanId;
                string MauBc = ViewBag.MauBc;
                if (MauBc.IsEmpty())
                {
                    MauBc = "1";
                }
                name = name + MauBc;
                string id = ViewBag.Id;
                string link = "";
                if (name == null)
                {
                    <span></span>
                }
                else
                {
                    link = "http://localhost/ReportServer/Pages/ReportViewer.aspx?%2fDemoReport%2f" + name + "&TuNgay=" + tungay + "&DenNgay=" + denngay + "&rs:Command=Render&rs:Embed=true";
                }



            }
            <iframe style="height: 65vw; border: none; width:100%" src="@link"></iframe>
        </section>
    </div>
</main>

