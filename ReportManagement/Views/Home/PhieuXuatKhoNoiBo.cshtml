@model IEnumerable<PhieuXuatKho>
@{
    ViewBag.Title = "PhieuXuatKho";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("BaoCaoPhieuXuatKho", "Home", FormMethod.Post))
{
    <div class="card mb-4 m-2">
        <div class="card-header">
            <div class="d-flex align-content-center w-100">
                <span class="fs-3 fw-bold">PHIẾU XUẤT KHO NỘI BỘ</span>
                <a href="@Url.Action("NgayBaoCao", "Home", new {name = "PhieuXuatKhoNoiBo"})" class="ms-auto"><i class="fa-solid fa-xmark "></i></a>
            </div>
            <div><span class="fs-5 ms-1">Từ ngày @ViewBag.fromDate đến ngày @ViewBag.toDate</span></div>
        </div>
        <div class="card-body">
            <button type="submit" class="btn btn-outline-info"> <i class="fa-solid fa-print fa-lg"></i> In</button>
        </div>
        <div class="card-body overflow-scroll">
            <table id="resizeMe" class="table table-hover resizable-table">
                <thead class="bg-info">
                    <tr id="header-row">
                        <th class="text-nowrap">@Html.CheckBox("ID")</th>
                        <th class="text-nowrap">Ngày chứng từ</th>
                        <th class="text-nowrap">Số chứng từ</th>
                        <th class="text-nowrap">Mã khách</th>
                        <th class="text-nowrap">Tên khách</th>
                        <th class="text-nowrap">Tổng tiền</th>
                        <th class="text-nowrap">Diễn giải</th>
                        <th class="text-nowrap">Mã ngoại tệ</th>
                        <th class="text-nowrap">Tỷ giá</th>
                        <th class="text-nowrap">Tổng tiền ngoại tệ</th>
                        <th class="text-nowrap">Mã giao dịch</th>
                        <th class="text-nowrap">Chi tiết</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var px in Model)
                    {
                        <tr>
                            <td><input id="@px.Id" type="checkbox" name="list" value="@px.Id" /></td>
                            <td>@Convert.ToDateTime(px.NgayLap).ToString("dd/MM/yyyy")</td>
                            <td>@Html.DisplayFor(Model => px.SoCt)</td>
                            <td>@Html.DisplayFor(Model => px.KhachHangId)</td>
                            <td>@Html.DisplayFor(Model => px.KhachHangId)</td>
                            <td>@Html.DisplayFor(Model => px.TongTienVND)</td>
                            <td>@Html.DisplayFor(Model => px.DienGiai)</td>
                            <td>@Html.DisplayFor(Model => px.NgoaiTeId)</td>
                            <td>@Html.DisplayFor(Model => px.TyGia)</td>
                            <td>@Html.DisplayFor(Model => px.TongTien)</td>
                            <td>@Html.DisplayFor(Model => px.GiaoDichId)</td>
                            <td>@Html.DisplayFor(Model => px.GiaoDichId)</td>
                        </tr>
                    }
                </tbody>
            </table>
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>

    </div>
}