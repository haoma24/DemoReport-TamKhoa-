@{
    ViewBag.Title = "SoQuyTienMat";
    Layout = "~/Views/Shared/_Layout.cshtml";
    System.Data.DataTable dt = ViewBag.Datatable as System.Data.DataTable;
}

@using (Html.BeginForm("BaoCaoSoQuy", "Home", FormMethod.Post))
{
    <div class="card mb-4 m-2">
        <div class="card-header">
            <div class="d-flex align-content-center w-100">
                <span class="fs-3 fw-bold">SỔ QUỸ TIỀN MẶT</span>
                <a href="@Url.Action("NgayBaoCaoSoQuy", "Home", new {name = "SoQuyTienMat"})" class="ms-auto"><i class="fa-solid fa-xmark "></i></a>
            </div>
            <div><span class="fs-5 ms-1">Từ ngày @ViewBag.fromDate đến ngày @ViewBag.toDate</span></div>
            <input id="@ViewBag.fromDate" type="text" hidden name="fromDate" value="@ViewBag.fromDate" />
            <input id="@ViewBag.toDate" type="text" hidden name="toDate" value="@ViewBag.toDate" />
            <input id="taikhoaid" type="text" hidden name="taikhoanid" value="350" />
        </div>
        <div class="card-body">
            <button type="submit" class="btn btn-outline-info"> <i class="fa-solid fa-print fa-lg"></i> In</button>
        </div>
        <div class="card-body table-responsive">
            <table class="table table-hover table-bordered">
                <thead class="bg-info">
                    <tr id="header-row">
                        <th class="text-nowrap">Mã ct</th>
                        <th class="text-nowrap">Ngày ct</th>
                        <th class="text-nowrap">Số ct</th>
                        <th class="text-nowrap">Ông bà</th>
                        <th class="text-nowrap">Mã khách</th>
                        <th class="text-nowrap">Tên khách</th>
                        <th class="text-nowrap">Diễn giải</th>
                        <th class="text-nowrap">Tk dư</th>
                        <th class="text-nowrap">Ps nợ</th>
                        <th class="text-nowrap">Ps có</th>
                        <th class="text-nowrap">Dư cuối</th>
                        <th class="text-nowrap">Mã vv</th>
                        <th class="text-nowrap">Mã phí</th>
                        <th class="text-nowrap">Tên tk dư</th>
                        <th class="text-nowrap">Tên vv</th>
                        <th class="text-nowrap">Tên phí</th>
                        <th class="text-nowrap">Số phiếu</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (System.Data.DataRow row in dt.Rows)
                    {
                        <tr>
                            <td class="e-ellipsis-100">@row["Mact"]</td>
                            <td class="e-ellipsis-100">@row["Ngayct"]</td>
                            <td class="e-ellipsis-100">@row["Soct"]</td>
                            <td class="e-ellipsis-100">@row["DoiTac"]</td>
                            <td class="e-ellipsis-100">@row["Khachhang_ud"]</td>
                            <td class="e-ellipsis-100">@row["Khachhang_nm"]</td>
                            <td class="e-ellipsis-100">@row["DienGiai"]</td>
                            <td class="e-ellipsis-100">@row["TkDu"]</td>
                            @if (double.Parse(row["Psno"].ToString()) == 0)
                            {
                                <td class="e-ellipsis-100"></td>
                            }
                            else
                            {
                                <td class="e-ellipsis-100">@row["Psno"]</td>
                            }
                            @if (double.Parse(row["Psco"].ToString()) == 0)
                            {
                                <td class="e-ellipsis-100"></td>
                            }
                            else
                            {
                                <td class="e-ellipsis-100">@row["Psco"]</td>
                            }
                            <td class="e-ellipsis-100">@row["Mact"]</td>
                            <td class="e-ellipsis-100">@row["VuViec_ud"]</td>
                            <td class="e-ellipsis-100">@row["MaPhi_ud"]</td>
                            <td class="e-ellipsis-100">@row["TkDu_nm"]</td>
                            <td class="e-ellipsis-100">@row["VuViec_nm"]</td>
                            <td class="e-ellipsis-100">@row["MaPhi_nm"]</td>
                            <td class="e-ellipsis-100">@row["Phieu_ud"]</td>
                        </tr>
                    }
                </tbody>
            </table>
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>

    </div>
}

