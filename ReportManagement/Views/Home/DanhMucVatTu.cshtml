@model IEnumerable<VatTu>
@{
    ViewBag.Title = "DanhMucVatTu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("BaoCaoDanhMucVatTu", "Home", FormMethod.Post))
{
    <div class="card mb-4 m-2">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            DANH MỤC VẬT TƯ
        </div>
        <div class="card-body">
            <button type="submit" class="btn btn-outline-info"> <i class="fa-solid fa-print fa-lg"></i> In</button>
        </div>
        <div class="card-body table-responsive">
            <table id="resizeMe" class="table table-hover resizable-table">
                <thead class="bg-info">
                    <tr id="header-row">
                        <th>@Html.CheckBox("ID")</th>
                        <th class="text-nowrap draggable-table" data-column="1">Mã vật tư</th>
                        <th class="text-nowrap draggable-table" data-column="2">Tên vật tư</th>
                        <th class="text-nowrap draggable-table" data-column="3">Đvt</th>
                        <th class="text-nowrap draggable-table" data-column="4">Nhóm vt 1</th>
                        <th class="text-nowrap draggable-table" data-column="5">Nhóm vt 2</th>
                        <th class="text-nowrap draggable-table" data-column="6">Nhóm vt 3</th>
                        <th class="text-nowrap draggable-table" data-column="7">VT tồn kho</th>
                        <th class="text-nowrap draggable-table" data-column="8">Cách tính giá</th>
                        <th class="text-nowrap draggable-table" data-column="9">Tk vật tư</th>
                        <th class="text-nowrap draggable-table" data-column="10">Tk giá vốn</th>
                        <th class="text-nowrap draggable-table" data-column="11">Tk doanh thu</th>
                        <th class="text-nowrap draggable-table" data-column="12">Tk hàng bán trả lại</th>
                        <th class="text-nowrap draggable-table" data-column="13">Tk sp dd</th>
                        <th class="text-nowrap draggable-table" data-column="14">Tk chênh lệch giá vt</th>
                        <th class="text-nowrap draggable-table" data-column="15">Tên 2</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var VT in Model)
                    {

                        bool isTonKho = (VT.IsTheoDoiTonKho) ?? true;

                        <tr>
                            <td><input id="@VT.Id" type="checkbox" name="list" value="@VT.VatTuUd" /></td>
                            <td>@Html.DisplayFor(Model => VT.VatTuUd)</td>
                            <td>@Html.DisplayFor(Model => VT.VatTuNm)</td>
                            <td>@Html.DisplayFor(Model => VT.DonViTinh)</td>
                            <td>@Html.DisplayFor(Model => VT.NhomVT1)</td>
                            <td>@Html.DisplayFor(Model => VT.NhomVT2)</td>
                            <td>@Html.DisplayFor(Model => VT.NhomVT3)</td>
                            <td class="text-center">@Html.CheckBox("isTonKho", isTonKho)</td>
                            <td>@Html.DisplayFor(Model => VT.CachTinhGia)</td>
                            <td>@Html.DisplayFor(Model => VT.TkKho)</td>
                            <td>@Html.DisplayFor(Model => VT.TkGiaVon)</td>
                            <td>@Html.DisplayFor(Model => VT.TkDoanhThu)</td>
                            <td>@Html.DisplayFor(Model => VT.TkHangBiTra)</td>
                            <td>@Html.DisplayFor(Model => VT.TkSpDoDang)</td>
                            <td>@Html.DisplayFor(Model => VT.TkChenhLechGiaVt)</td>
                            <td>@Html.DisplayFor(Model => VT.VatTuNm2)</td>
                        </tr>
                    }
                </tbody>
            </table>
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>

    </div>
}