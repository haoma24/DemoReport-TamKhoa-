@model IEnumerable<PhieuThu>
@{
    ViewBag.Title = "PhieuThuTienMat";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("BaoCaoPhieuThu", "Home", FormMethod.Post,new {target = "_blank"}))
{
<div class="card mb-4 m-2">
    <div class="card-header">
        <div class="d-flex align-content-center w-100">
            <span class="fs-3 fw-bold">PHIẾU THU TIỀN MẶT</span>
            <a href="@Url.Action("NgayBaoCao", "Home", new {name = "PhieuThuTienMat"})" class="ms-auto"><i class="fa-solid fa-xmark "></i></a>
        </div>
        <div><span class="fs-5 ms-1">Từ ngày @ViewBag.fromDate đến ngày @ViewBag.toDate</span></div>
    </div>
    <div class="card-body">
        <button type="submit" class="btn btn-outline-info"> <i class="fa-solid fa-print fa-lg"></i> In</button>
    </div>
    <div class="card-body overflow-auto">
        <table class="table table-hover table-bordered border-opacity-25 border-dark">
            <thead class="bg-info">
                <tr id="header-row">
                    <th class="text-center e-ellipsis-100">@Html.CheckBox("ID")</th>
                    <th class="text-nowrap">Ngày chứng từ</th>
                    <th class="text-nowrap">Số chứng từ</th>
                    <th class="text-nowrap">Diễn giải</th>
                    <th class="text-nowrap">Mã khách</th>
                    <th class="text-nowrap">Tài khoản nợ</th>
                    <th class="text-nowrap">Tổng phát sinh</th>
                    <th class="text-nowrap">Mã ngoại tệ</th>
                    <th class="text-nowrap">Tỷ giá</th>
                    <th class="text-nowrap">Chi tiết</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pt in Model)
                {
                    <tr>
                        <td class="e-ellipsis-100 text-center"><input id="@pt.Id" type="checkbox" name="list" value="@pt.Id" /></td>
                        <td class="e-ellipsis-100">@Convert.ToDateTime(pt.NgayLap).ToString("dd/MM/yyyy")</td>
                        <td class="e-ellipsis-100">@Html.DisplayFor(Model => pt.SoPhieu)</td>
                        <td class="e-ellipsis-100">@Html.DisplayFor(Model => pt.DienGiai)</td>
                        <td class="e-ellipsis-100">@Html.DisplayFor(Model => pt.KhachHangId)</td>
                        <td class="e-ellipsis-100">@Html.DisplayFor(Model => pt.GhiNoTkId)</td>
                        <td class="e-ellipsis-100">@Html.DisplayFor(Model => pt.TongTienVND)</td>
                        <td class="e-ellipsis-100">@Html.DisplayFor(Model => pt.NgoaiTeId)</td>
                        <td class="e-ellipsis-100">@Html.DisplayFor(Model => pt.TyGia)</td>
                        <td class="e-ellipsis-100">@Html.DisplayFor(Model => pt.ChungTu)</td>
                    </tr>
                }
            </tbody>
        </table>
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>

</div>
}

